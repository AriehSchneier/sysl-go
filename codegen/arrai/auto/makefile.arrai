let [_, template, spec, ...apps] = //os.args;
let apps = apps >> //seq.split(':', .);
$`
    SYSLGO_SYSL=${spec}
    SYSLGO_PACKAGES=${//seq.join(' ', apps >> .(1))}
    ${cond {(template != ''): $`TEMPLATE=${template}`}}
    ${
        apps >> \[app, pkg] $`SYSLGO_APP.${pkg} = ${app}`
    ::\i:\n}
    -include local.mk
    include codegen.mk

    .PHONY: clean
    clean:
        rm -rf internal/gen

    PHONY: .test
    test: gen-all-servers
        go test -v ./...

`
